<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="azamat.kz.bitcoinpriceindex.ui.fragment.ConverterFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="16dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Bitcoin (BTC)"
            android:layout_marginEnd="10dp"
            style="@style/ButtonStyle"/>

        <EditText
            android:id="@+id/ed_btc"
            style="@style/EditTextConverter"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:src="@drawable/ic_swap_vert_24dp"/>

        <ImageView
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:src="@drawable/ic_equal"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="16dp">

        <android.support.v7.widget.AppCompatSpinner
            android:id="@+id/currency_convert_spinner"
            style="@style/SpinnerStyle"
            android:layout_weight="1"
            android:layout_marginEnd="10dp"/>

        <EditText
            android:id="@+id/ed_currency"
            style="@style/EditTextConverter"/>
    </LinearLayout>

    <Button
        android:id="@+id/btn_clear_converter"
        style="@style/SpinnerStyle.Button"
        android:text="Clear"/>

    <ProgressBar
        android:id="@+id/progress_bar_converter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:visibility="gone"/>

</LinearLayout>
